<RelativeLayout android:background="@drawable/frukty" 
    tools:context="com.example.mealtracker.MainActivity" 
    android:paddingTop="@dimen/activity_vertical_margin" 
    android:paddingRight="@dimen/activity_horizontal_margin" 
    android:paddingLeft="@dimen/activity_horizontal_margin" 
    android:paddingBottom="@dimen/activity_vertical_margin" 
    android:layout_height="match_parent" 
    android:layout_width="match_parent" 
    xmlns:tools="http://schemas.android.com/tools" 
    xmlns:android="http://schemas.android.com/apk/res/android">

	<TextView android:layout_height="wrap_content" 
	    android:layout_width="wrap_content" 
	    android:textSize="32sp" 
	    android:textColor="#FFFFFF" 
	    android:text="@string/welcome" 
	    android:layout_marginTop="110dp" 
	    android:layout_centerHorizontal="true" 
	    android:layout_alignParentTop="true" 
	    android:id="@+id/textView1"/>

	<Button android:background="#E0E0E0" 
	    android:layout_height="wrap_content" 
	    android:layout_width="wrap_content" 
	    android:text="Alarms" 
	    android:layout_marginTop="90dp" 
	    android:id="@+id/exploreButton" 
	    android:layout_below="@+id/textView1" 
	    android:layout_alignRight="@+id/textView1" 
	    android:layout_alignLeft="@+id/textView1"/>

	<Button android:background="#00B82E" 
	    android:layout_height="wrap_content" 
	    android:layout_width="wrap_content" 
	    android:textColor="#FFFFFF" 
	    android:text="Go" 
	    android:layout_marginTop="20dp" 
	    android:id="@+id/goButton" 
	    android:layout_below="@+id/exploreButton" 
	    android:layout_alignRight="@+id/exploreButton" 
	    android:layout_alignLeft="@+id/exploreButton" 
	    android:onClick="sendMessage" 
	    style="@style/AppTheme"/>
</RelativeLayout>