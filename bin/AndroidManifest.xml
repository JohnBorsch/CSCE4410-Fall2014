<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.heartbleed.mealtracker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="20" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name="com.heartbleed.mealtracker.AlarmListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name="com.heartbleed.mealtracker.AlarmScreen" />
        <activity android:name="com.heartbleed.mealtracker.AlarmDetailsActivity" />

        <service
            android:name="com.heartbleed.mealtracker.AlarmService"
            android:enabled="true" />

        <receiver android:name="com.heartbleed.mealtracker.AlarmManagerHelper" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.heartbleed.mealtracker.FirstActivity"
            android:label="@string/title_activity_first" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.heartbleed.mealtracker.SecondActivity"
            android:label="@string/title_activity_second" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.heartbleed.mealtracker.ThirdActivity"
            android:label="@string/title_activity_third" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.heartbleed.mealtracker.LoseWeight"
            android:label="@string/title_activity_lose_weight" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.heartbleed.mealtracker.GainWeight"
            android:label="@string/title_activity_gain_weight" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.heartbleed.mealtracker.FourthActivity"
            android:label="@string/title_activity_fourth" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.heartbleed.mealtracker.FifthActivity"
            android:label="@string/title_activity_fifth" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.heartbleed.mealtracker.SixthActivity"
            android:label="@string/title_activity_sixth" 
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
